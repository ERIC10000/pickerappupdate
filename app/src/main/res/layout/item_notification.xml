<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_info_card"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_red_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="top|end"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#FF3B30"
        app:cardElevation="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_marginEnd="12dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notification_bell"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                app:tint="@color/primary_green"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                <TextView
                    android:id="@+id/tv_notif_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Notification Title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark" />
                <TextView
                    android:id="@+id/tv_notif_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_green" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_notif_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message content goes here..."
                android:textSize="13sp"
                android:textColor="@color/text_dark"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="8dp"
                android:maxLines="2"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_notif_type"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Alert Type"
                    android:textSize="10sp"
                    android:textColor="@color/text_light" />
                <TextView
                    android:id="@+id/btn_mark_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mark Read"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_green"
                    android:padding="4dp"
                    android:background="?attr/selectableItemBackground"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
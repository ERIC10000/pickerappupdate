<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityGenerateID">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F8F9FA">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:elevation="2dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:scaleType="centerInside"
                android:tint="@color/text_dark" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Generate ID"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_marginLeft="16dp" />
        </LinearLayout>

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- FRONT SIDE OF ID CARD -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Front Preview"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="12dp"
                    android:letterSpacing="0.02" />

                <FrameLayout
                    android:id="@+id/id_card_front"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:layout_marginHorizontal="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:padding="0dp">

                        <!-- Security Header Strip -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:orientation="horizontal"
                            android:background="@color/primary_green">

                            <!-- Microtext pattern -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="WASTEMANAGE • OFFICIAL • SECURE • "
                                android:textSize="3sp"
                                android:textColor="#80FFFFFF"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:ellipsize="none"
                                android:scrollHorizontally="true"
                                android:paddingHorizontal="2dp" />
                        </LinearLayout>

                        <!-- Main Card Content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="14dp">

                            <!-- Left Side - Profile Image with Security Frame -->
                            <FrameLayout
                                android:layout_width="95dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="14dp">

                                <!-- Security pattern background -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient_info_card"
                                    android:alpha="0.1" />

                                <!-- Photo Frame -->
                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="145dp"
                                    android:layout_gravity="top"
                                    android:background="@drawable/gradient_info_card">

                                    <ImageView
                                        android:id="@+id/iv_id_card_image_front"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:contentDescription="Profile picture"
                                        android:visibility="gone" />

                                    <LinearLayout
                                        android:id="@+id/layout_id_image_placeholder_front"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:gravity="center">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/sikolia"
                                            android:contentDescription="Profile placeholder"
                                            android:scaleType="centerCrop" />
                                    </LinearLayout>

                                    <!-- Photo security overlay -->
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/primary_green"
                                        android:layout_gravity="bottom"
                                        android:alpha="0.6" />
                                </FrameLayout>

                                <!-- Holographic Element Simulation -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="✓"
                                    android:textSize="16sp"
                                    android:textColor="@color/primary_green"
                                    android:textStyle="bold"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:background="#F0F0F0"
                                    android:paddingHorizontal="6dp"
                                    android:paddingVertical="2dp"
                                    android:alpha="0.9" />
                            </FrameLayout>

                            <!-- Right Side - Personal Information -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingStart="4dp"
                                android:paddingEnd="4dp">

                                <!-- Organization Header -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginBottom="10dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="REPUBLIC OF KENYA"
                                        android:textSize="7sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/text_light"
                                        android:letterSpacing="0.15"
                                        android:layout_marginBottom="2dp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical"
                                        android:layout_marginBottom="2dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="WASTEMANAGE"
                                            android:textSize="11sp"
                                            android:textStyle="bold"
                                            android:textColor="@color/primary_green"
                                            android:letterSpacing="0.08" />

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="1.5dp"
                                            android:layout_weight="1"
                                            android:background="@color/primary_green"
                                            android:layout_marginStart="8dp" />
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="AUTHORIZED COLLECTOR ID"
                                        android:textSize="7sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/text_dark"
                                        android:letterSpacing="0.1" />
                                </LinearLayout>

                                <!-- Name Section -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center_vertical">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="FULL NAME"
                                            android:textSize="6.5sp"
                                            android:textStyle="bold"
                                            android:textColor="@color/primary_green"
                                            android:letterSpacing="0.1" />

                                        <TextView
                                            android:id="@+id/tv_id_card_name_front"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="JEREMY KIPROTICH"
                                            android:textSize="10sp"
                                            android:textColor="@color/text_dark"
                                            android:typeface="monospace"
                                            android:textStyle="bold"
                                            android:letterSpacing="0.05"
                                            android:maxLines="1"
                                            android:ellipsize="end" />
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- ID Details Grid -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginBottom="8dp">

                                    <!-- ID Number -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginBottom="5dp"
                                        android:gravity="center_vertical">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="ID NUMBER"
                                                android:textSize="6.5sp"
                                                android:textStyle="bold"
                                                android:textColor="@color/primary_green"
                                                android:letterSpacing="0.1" />

                                            <TextView
                                                android:id="@+id/tv_id_card_id_number_front"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="WM-2025-123456"
                                                android:textSize="10sp"
                                                android:textColor="@color/text_dark"
                                                android:typeface="monospace"
                                                android:textStyle="bold"
                                                android:letterSpacing="0.05"
                                                android:maxLines="1"
                                                android:ellipsize="end" />
                                        </LinearLayout>

                                        <!-- Security Chip Icon -->
                                        <TextView
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:text="◈"
                                            android:textSize="14sp"
                                            android:textColor="@color/primary_green"
                                            android:gravity="center"
                                            android:alpha="0.5" />
                                    </LinearLayout>

                                    <!-- Registration ID -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginBottom="5dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="REGISTRATION NO."
                                            android:textSize="6.5sp"
                                            android:textStyle="bold"
                                            android:textColor="@color/primary_green"
                                            android:letterSpacing="0.1" />

                                        <TextView
                                            android:id="@+id/tv_id_card_reg_id_front"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="REG/KE/NBI/2025/456"
                                            android:textSize="10sp"
                                            android:textColor="@color/text_dark"
                                            android:typeface="monospace"
                                            android:textStyle="bold"
                                            android:letterSpacing="0.03"
                                            android:maxLines="1"
                                            android:ellipsize="end" />
                                    </LinearLayout>

                                    <!-- County & Issue Date -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:layout_marginEnd="8dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="COUNTY"
                                                android:textSize="6.5sp"
                                                android:textStyle="bold"
                                                android:textColor="@color/primary_green"
                                                android:letterSpacing="0.1" />

                                            <TextView
                                                android:id="@+id/tv_id_card_county_front"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Nairobi"
                                                android:textSize="9sp"
                                                android:textColor="@color/text_dark"
                                                android:textStyle="bold"
                                                android:maxLines="1"
                                                android:ellipsize="end" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="ISSUED"
                                                android:textSize="6.5sp"
                                                android:textStyle="bold"
                                                android:textColor="@color/primary_green"
                                                android:letterSpacing="0.1" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="15 JAN 2025"
                                                android:textSize="9sp"
                                                android:textColor="@color/text_dark"
                                                android:textStyle="bold"
                                                android:typeface="monospace"
                                                android:maxLines="1"
                                                android:ellipsize="end" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- Validity Period -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:background="#FFF9E6"
                                    android:padding="4dp"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="VALID UNTIL:"
                                        android:textSize="7sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/text_dark"
                                        android:letterSpacing="0.08"
                                        android:layout_marginEnd="6dp" />

                                    <TextView
                                        android:id="@+id/tv_id_card_valid_front"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:text="14 JANUARY 2030"
                                        android:textSize="8sp"
                                        android:textColor="@color/text_dark"
                                        android:textStyle="bold"
                                        android:typeface="monospace"
                                        android:maxLines="1"
                                        android:ellipsize="end" />
                                </LinearLayout>
                            </LinearLayout>

                            <!-- Right Security Stripe -->
                            <LinearLayout
                                android:layout_width="4dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="@color/primary_green" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="#1A000000" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Security Footer Strip -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:orientation="horizontal"
                            android:background="@color/primary_green">

                            <!-- Microtext pattern -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="SECURE • VERIFIED • AUTHENTIC • "
                                android:textSize="3sp"
                                android:textColor="#80FFFFFF"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:ellipsize="none"
                                android:scrollHorizontally="true"
                                android:paddingHorizontal="2dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Shadow -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/id_card_shadow" />
                </FrameLayout>

                <!-- BACK SIDE OF ID CARD -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back Preview"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="12dp"
                    android:letterSpacing="0.02" />

                <FrameLayout
                    android:id="@+id/id_card_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:padding="0dp">

                        <!-- Security Header Strip -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:orientation="horizontal"
                            android:background="@color/primary_green">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="OFFICIAL • GENUINE • PROTECTED • "
                                android:textSize="3sp"
                                android:textColor="#80FFFFFF"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:ellipsize="none"
                                android:scrollHorizontally="true"
                                android:paddingHorizontal="2dp" />
                        </LinearLayout>

                        <!-- Main Content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center_horizontal">

                            <!-- Title -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:layout_marginBottom="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="REPUBLIC OF KENYA"
                                    android:textSize="8sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_light"
                                    android:letterSpacing="0.15"
                                    android:layout_marginBottom="2dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="WASTEMANAGE"
                                    android:textSize="13sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/primary_green"
                                    android:letterSpacing="0.1"
                                    android:layout_marginBottom="2dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="OFFICIAL IDENTIFICATION CARD"
                                    android:textSize="7sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_dark"
                                    android:letterSpacing="0.12" />
                            </LinearLayout>

                            <!-- QR Code Section with Security Frame -->
                            <FrameLayout
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:background="#F8F9FA"
                                android:padding="4dp"
                                android:layout_marginBottom="10dp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient_info_card">

                                    <ImageView
                                        android:id="@+id/iv_qr_code"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="fitCenter"
                                        android:contentDescription="QR Code"
                                        android:padding="4dp"
                                        android:visibility="gone" />

                                    <LinearLayout
                                        android:id="@+id/layout_qr_placeholder"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:gravity="center">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="QR"
                                            android:textSize="12sp"
                                            android:textColor="@color/text_light"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="CODE"
                                            android:textSize="8sp"
                                            android:textColor="@color/text_light" />
                                    </LinearLayout>
                                </FrameLayout>
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Scan to verify authenticity"
                                android:textSize="7sp"
                                android:textColor="@color/text_dark"
                                android:textStyle="bold"
                                android:layout_marginBottom="12dp" />

                            <!-- Security Notice -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="#FFF9E6"
                                android:padding="8dp"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="⚠ SECURITY NOTICE"
                                    android:textSize="7sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_dark"
                                    android:letterSpacing="0.08"
                                    android:layout_marginBottom="3dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="This card remains the property of WasteManage Kenya. Alteration, duplication, or unauthorized use is strictly prohibited and punishable by law. Must be verified through official channels."
                                    android:textSize="6sp"
                                    android:textColor="@color/text_dark"
                                    android:lineSpacingMultiplier="1.2"
                                    android:justificationMode="inter_word" />
                            </LinearLayout>

                            <!-- Contact Info -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="VERIFICATION HOTLINE"
                                    android:textSize="6sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_light"
                                    android:letterSpacing="0.1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+254 700 123 456"
                                    android:textSize="8sp"
                                    android:textColor="@color/primary_green"
                                    android:textStyle="bold"
                                    android:typeface="monospace"
                                    android:layout_marginBottom="2dp"
                                    android:maxLines="1"
                                    android:ellipsize="end" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="verify@wastemanage.co.ke"
                                    android:textSize="7sp"
                                    android:textColor="@color/primary_green"
                                    android:textStyle="bold"
                                    android:maxLines="1"
                                    android:ellipsize="end" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Security Footer Strip with Serial -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:orientation="horizontal"
                            android:background="@color/primary_green"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:text="SERIAL: WM-KE-2025-SEC-789456123"
                                android:textSize="4sp"
                                android:textColor="#FFFFFF"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:typeface="monospace"
                                android:letterSpacing="0.05"
                                android:maxLines="1"
                                android:ellipsize="end" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Shadow -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/id_card_shadow" />
                </FrameLayout>

            </LinearLayout>
        </ScrollView>

        <!-- Action Buttons at Bottom -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@color/white"
            android:elevation="8dp">

            <!-- Take Screenshot Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_screenshot"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Take Screenshot"
                android:textSize="13sp"
                android:textStyle="bold"
